<%= form_with(model: [@workshop_activity.workshop.project, @workshop_activity.workshop, @workshop_activity]) do |form| %>

	<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :activity_type %>
    <%= form.select :activity_type, options_from_collection_for_select(Breakout.all, :id,:name), {prompt: "select"} %>
  </div>

  <div class="field">
    <%= form.label :activity_id %>
    <%= form.select :activity_id, options_from_collection_for_select(Content.all, :id,:name), {prompt: "select"} %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>